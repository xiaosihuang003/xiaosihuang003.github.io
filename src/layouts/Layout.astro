---
// src/layouts/Layout.astro
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import { languages } from "../i18n";

const { title = "Xiaosi Huang · Portfolio", lang = "en" } = Astro.props;

// 去掉语言前缀，得到同一路径（/en,/fi,/sv,/zh,/yue）
const raw = Astro.url.pathname || "/";
const logicalPath = raw.replace(/^\/(en|fi|sv|zh|yue)(?=\/|$)/, "");

// hreflang 映射
const hreflangMap: Record<string, string> = {
  en: "en",
  fi: "fi",
  sv: "sv",
  zh: "zh-Hans",
  yue: "zh-Hant",
};

// 生成某语言下的完整 URL
const urlFor = (code: string) =>
  new URL(
    `${code === "en" ? "/en" : `/${code}`}${logicalPath || "/"}`,
    Astro.url.origin
  ).toString();
---
<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <title>{title}</title>

    <!-- Canonical & Meta -->
    <link rel="canonical" href={Astro.url.origin + Astro.url.pathname} />
    <meta name="description" content="Tableau visualization, dashboard design, and business analytics. Selected projects, methods, and notes." />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Portfolio of visualization & analytics work." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.origin + Astro.url.pathname} />
    <meta property="og:image" content="/og-cover.png" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- 只用字母版 SVG 作为 favicon；带版本参数防缓存 -->
    <link rel="icon" href="/favicon.svg?v=3" type="image/svg+xml" />
    <!-- 可选：给 Safari pinned tab 用的 mask（同一份 SVG）-->
    <link rel="mask-icon" href="/favicon.svg?v=3" color="#2563eb" />
    <!-- 不提供 Apple Touch PNG，先省略；以后补 180x180 PNG 再加：
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=3" />
    -->
    <meta name="theme-color" content="#ffffff" />

    {/* hreflang 多语言 alternate */}
    {languages.map((code) => (
      <link rel="alternate" hrefLang={hreflangMap[code]} href={urlFor(code)} />
    ))}
    <link rel="alternate" hrefLang="x-default" href={urlFor("en")} />
  </head>

  <body class="bg-white text-zinc-900 dark:bg-zinc-900 dark:text-zinc-100">
    <Nav />
    <main class="mx-auto max-w-7xl px-4 md:px-8 py-12">
      <slot />
    </main>
    <footer class="border-t border-zinc-200 dark:border-zinc-800 py-10">
      <div class="mx-auto max-w-7xl px-4 md:px-8 text-sm opacity-70">
        © {new Date().getFullYear()} Xiaosi Huang. All rights reserved.
      </div>
    </footer>
  </body>
</html>
