---
// src/components/BackButton.astro
import { dict, normalizeLang } from "../i18n";

interface Props {
  href: string;
  text?: string;
  kind?: "blog" | "projects";
  lang?: string;
}
const p = Astro.props as Props;
const lang = normalizeLang(p.lang);
const t = dict[lang];

const label =
  p.text
  ?? (p.kind === "projects"
        ? (t.ui?.backToProjects || `Back to ${t.nav.projects || "Projects"}`)
        : (t.ui?.backToBlog     || `Back to ${t.nav.blog     || "Blog"}`));
---

<a
  href={p.href}
  class="inline-flex items-center gap-2 rounded-xl border border-zinc-300/70 dark:border-zinc-700
         px-3 py-1.5 text-sm bg-white/70 dark:bg-zinc-900/70 backdrop-blur
         hover:bg-zinc-100 dark:hover:bg-zinc-800 transition"
>
  <span aria-hidden="true">‚Üê</span>{label}
</a>
