---
const { title, desc, href, tags = [] } = Astro.props;
---
<a href={href} class="block rounded-2xl border border-zinc-200 p-6 hover:shadow-sm transition">
  <h3 class="font-semibold">{title}</h3>
  <p class="mt-2 opacity-70">{desc}</p>
  <div class="mt-3 flex gap-2 flex-wrap">
    {tags.map(t => <span class="text-xs px-2 py-1 rounded bg-zinc-100">{t}</span>)}
  </div>
</a>
