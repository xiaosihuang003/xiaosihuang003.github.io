---
interface Crumb { href?: string; label: string }
const { items = [] as Crumb[] } = Astro.props;
---
<nav aria-label="Breadcrumb" class="breadcrumbs">
  <ol>
    {items.map((it, i) => (
      <li>
        {it.href ? <a href={it.href}>{it.label}</a> : <span aria-current="page">{it.label}</span>}
        {i < items.length - 1 && <span class="sep">/</span>}
      </li>
    ))}
  </ol>
</nav>

<style>
/* 组件内保底，细节交给全局 CSS */
.breadcrumbs { display:flex; align-items:center; gap:.5rem; }
.breadcrumbs ol { display:flex; flex-wrap:wrap; gap:.5rem; margin:0; padding:0; list-style:none; }
.breadcrumbs .sep { opacity:.5; margin:0 .25rem; }
</style>
